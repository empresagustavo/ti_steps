model User {
    id                      String          @id                 @default(uuid())
    createdAt               DateTime                            @default(now())
    updatedAt               DateTime                            @updatedAt
    active                  Boolean                             @default(true)

    name                    String
    email                   String          @unique
    password                String
    isAdmin                 Boolean                             @default(false)

    userRelNavMain          UserRelNavMain[]
    authoredTriggers        Trigger[]                           @relation("AuthorTriggers")
    proposedTriggers        Trigger[]                           @relation("ProposerTriggers")
    votes       TriggerVote[]
}